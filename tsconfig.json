{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "extends": "expo/tsconfig.base",
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"]
}